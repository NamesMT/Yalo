<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Home.Account.AccountFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="30dp"
        android:orientation="vertical">
        <!--Image Message-->
        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            app:cardCornerRadius="60dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/imguser_avatar" />
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:fontFamily="@font/poppins_regular"
            android:text="Duong Hoang Thy Tran"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_Profile"
            android:paddingVertical="12dp"
            android:paddingHorizontal="15dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:weightSum="5"
            android:orientation="horizontal">
            <!--Image Avatar-->
            <LinearLayout
                android:layout_weight="0.5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="25dp">
                    <ImageView
                        android:id="@+id/imageView_Avatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/imguser_avatar" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!--content -->
            <LinearLayout
                android:layout_weight="4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/textView_DisplayName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Duong Hoang Thy Tran"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/textView_MessageContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Xem trang cá nhân"
                    android:textColor="@color/txt_grey"
                    android:textSize="14dp" />
            </LinearLayout>


        </LinearLayout>

        <!--Item-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="12dp"
            android:paddingVertical="15dp"
            android:background="@color/white"
            android:weightSum="3"
            android:layout_marginVertical="1dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_security"
                android:tint="@color/primary"
                tools:ignore="UseAppTint" />
            <TextView
                android:layout_marginLeft="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tài khoản và bảo mật"
                android:gravity="center|left"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/black"
                android:layout_weight="3"
                android:textSize="15dp" />
        </LinearLayout>

        <!--Item-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="12dp"
            android:paddingVertical="15dp"
            android:background="@color/white"
            android:weightSum="3"
            android:layout_marginVertical="1dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_lock"
                android:tint="@color/primary"
                tools:ignore="UseAppTint" />
            <TextView
                android:layout_marginLeft="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Riêng tư"
                android:gravity="center|left"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/black"
                android:layout_weight="3"
                android:textSize="15dp" />
        </LinearLayout>

        <!--Item-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="12dp"
            android:paddingVertical="15dp"
            android:background="@color/white"
            android:weightSum="3"
            android:layout_marginVertical="1dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_message"
                android:tint="@color/primary"
                tools:ignore="UseAppTint" />
            <TextView
                android:layout_marginLeft="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tin nhắn chờ"
                android:gravity="center|left"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/black"
                android:layout_weight="3"
                android:textSize="15dp" />
        </LinearLayout>

        <!--Item-->
        <LinearLayout
            android:id="@+id/layout_Switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="12dp"
            android:paddingVertical="15dp"
            android:background="@color/white"
            android:weightSum="3"
            android:layout_marginVertical="1dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_transform"
                android:tint="@color/primary"
                tools:ignore="UseAppTint" />
            <TextView
                android:layout_marginLeft="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chuyển tài khoản"
                android:gravity="center|left"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/black"
                android:layout_weight="3"
                android:textSize="15dp" />
        </LinearLayout>

        <!--Item-->
        <LinearLayout
            android:id="@+id/layout_Logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="12dp"
            android:paddingVertical="15dp"
            android:background="@color/white"
            android:weightSum="3"
            android:layout_marginVertical="1dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_logout"
                android:tint="@color/primary"
                tools:ignore="UseAppTint" />
            <TextView
                android:layout_marginLeft="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đăng xuất"
                android:gravity="center|left"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/black"
                android:layout_weight="3"
                android:textSize="15dp" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>