<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/oppo_layout"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/oppo_message"
                android:paddingVertical="15dp"
                android:paddingHorizontal="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/opo_msg_back"
                android:fontFamily="@font/poppins_regular"
                android:text="Ok. I'm fine. What about you?"
                android:textColor="@color/black"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/oppo_msgTime"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="10:23 AM"
                android:textColor="@color/txt_grey"
                android:textSize="11dp" />

        </LinearLayout>


        <LinearLayout
            android:gravity="end"
            android:id="@+id/my_layout"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/my_message"
                android:paddingVertical="15dp"
                android:paddingHorizontal="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/my_msg_back"
                android:fontFamily="@font/poppins_regular"
                android:text="Ok. I'm fine. What about you?"
                android:textColor="@color/white"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/my_msgTime"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="10:23 AM"
                android:textColor="@color/txt_grey"
                android:textSize="11dp" />

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>