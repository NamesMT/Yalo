<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="nhom07.hcmute.zaloapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_zalo_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_zalo_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.ZaloApp"
        tools:replace="android:icon,android:theme">
        <activity
            android:name=".Home.Message.Chat.ChatActivity"
            android:exported="false"
            android:label="@string/action_user_search"
            android:parentActivityName=".Home.HomeActivity"/>
        <activity
            android:name=".UserSearch.SearchActivity"
            android:exported="false"
            android:label="@string/action_user_search"
            android:parentActivityName=".Home.HomeActivity" />
        <activity
            android:name=".Home.Account.Profile.ProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity
            android:name=".Home.HomeActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity
            android:name=".Onboarding.SignupActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity
            android:name=".Onboarding.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity
            android:name=".Onboarding.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>